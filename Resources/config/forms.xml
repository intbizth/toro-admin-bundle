<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="toro.form.extension.type.country" class="Toro\Bundle\AdminBundle\Form\Extension\CountryTypeExtension">
            <argument type="service" id="sylius.repository.country" />
            <tag name="form.type_extension" extended-type="Sylius\Bundle\AddressingBundle\Form\Type\CountryType" />
        </service>

        <service id="toro.form.type.security_login" class="Toro\Bundle\AdminBundle\Form\Type\SecurityLoginType">
            <tag name="form.type" alias="sylius_security_login" />
        </service>

        <service id="toro.form.type.locale_code_choice" class="Toro\Bundle\AdminBundle\Form\Type\LocaleCodeChoiceType">
            <argument type="service" id="sylius.repository.locale"/>
            <tag name="form.type" alias="sylius_locale_code_choice"/>
        </service>

        <service id="toro.form.type.locale" class="Toro\Bundle\AdminBundle\Form\Extension\LocaleTypeExtension">
            <argument>%locale%</argument>
            <argument type="service" id="sylius.repository.locale" />
            <tag name="form.type_extension" extended-type="Sylius\Bundle\LocaleBundle\Form\Type\LocaleType" />
        </service>

        <service id="toro.form.type.menu_choice" class="Toro\Bundle\AdminBundle\Form\Type\MenuChoiceType">
            <argument type="service" id="toro.repository.menu" />
            <tag name="form.type" alias="toro_menu_choice" />
        </service>

        <service id="toro.form.type.admin_user" class="Toro\Bundle\AdminBundle\Form\Type\AdminUserType">
            <argument>%sylius.model.admin_user.class%</argument>
            <argument type="collection"><argument>sylius</argument></argument>
            <tag name="form.type" />
        </service>
    </services>
</container>
