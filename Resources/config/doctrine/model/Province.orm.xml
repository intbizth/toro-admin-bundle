<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Toro\Bundle\AdminBundle\Model\Province" table="toro_province">
        <unique-constraints>
            <unique-constraint columns="country_id,code"/>
        </unique-constraints>

        <attribute-overrides>
            <attribute-override name="name">
                <field type="string" column="name" nullable="true"/>
            </attribute-override>
        </attribute-overrides>
    </mapped-superclass>

</doctrine-mapping>
