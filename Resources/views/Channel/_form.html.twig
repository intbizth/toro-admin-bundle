{{ form_errors(form) }}

<div class="row">
    <div class="col-sm-6">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">{{ 'toro.ui.detail'|trans }}</h3>
            </div>
            <div class="panel-body">
                {{ form_row(form.code) }}
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                {{ form_row(form.enabled) }}
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">{{ 'toro.ui.config'|trans }}</h3>
            </div>
            <div class="panel-body">
                {{ form_row(form.hostname) }}
                {{ form_row(form.color) }}
                {{ form_row(form.themeName) }}
                {{ form_row(form.defaultLocale) }}
                {{ form_row(form.locales) }}
                {{ form_row(form.taxons) }}
            </div>
        </div>
    </div>
</div>
