{{ form_errors(form) }}

<div class="row">

    <div class="col-sm-6">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">
                    {{ 'toro.ui.customer_details'|trans }}
                </h3>
            </div>
            <div class="panel-body">
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.gender) }}
                {{ form_row(form.birthday) }}
                {{ form_row(form.phoneNumber) }}
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">
                    {{ 'toro.ui.account_credentials'|trans }}
                </h3>
            </div>
            <div class="panel-body">
                {% if customer.user is empty or customer.user.id is null %}
                    <div class="checkbox">
                        <input type="checkbox" id="sylius_customer_createUser" name="sylius_customer[createUser]" value="1" data-toggle-change="#ui_user_form">
                        <label for="sylius_customer_createUser">{{ 'thsgg.ui.customer_can_login'|trans }}</label>
                    </div>
                {% endif %}

                {% if form.user is defined %}
                    <div id="ui_user_form" {% if form.user.vars.data.id is not defined %} style="display: none" {% endif %}>
                        {{ form_row(form.user.plainPassword) }}
                        {{ form_row(form.user.enabled) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
