{% set breadcrumbs = [
        { label: 'toro.ui.administration'|trans, url: path('sylius_admin_dashboard') },
        { label: (metadata.applicationName~'.ui.'~metadata.pluralName)|trans, url: path(configuration.getRouteName('index'), configuration.vars.route.parameters|default({})) },
        { label: resource.slug|default(
            resource.code|default(
                resource.name|default(
                    resource.fullname|default(
                        resource.id
                    )
                )
            )
        ) },
        { label: 'toro.ui.edit'|trans }
    ]
%}

{{ breadcrumb.crumble(breadcrumbs) }}
