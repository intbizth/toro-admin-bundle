{% import 'ToroAdminBundle:Crud/Macro:breadcrumb.html.twig' as breadcrumb %}

{% set breadcrumbs = [
        { label: 'toro.ui.administration'|trans, url: path('sylius_admin_dashboard') },
        { label: (metadata.applicationName~'.ui.'~metadata.pluralName)|trans, url: path(
            configuration.vars.route.name|default(configuration.getRouteName('index')),
            configuration.vars.route.parameters|default({})
        ) },
        { label: resource.code|default(
            resource.code|default(
                resource.name|default(
                    resource.fullname|default(
                        resource.id
                    )
                )
            )
        ) },
        { label: 'toro.ui.show'|trans }
    ]
%}

{{ breadcrumb.crumble(breadcrumbs) }}
