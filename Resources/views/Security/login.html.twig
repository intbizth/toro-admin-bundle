{% extends 'ToroAdminBundle::layout.html.twig' %}

{% block title %}CMS | {{ 'toro.ui.administration_panel_login'|trans }}{% endblock %}

{% block body %}
    {% block content %}
        <div id="container" class="cls-container">
            <div id="bg-overlay"></div>
            <div class="cls-content">
                <div class="cls-content-sm panel">
                    <div class="panel-body">
                        <div class="mar-ver pad-btm">
                            <h3 class="h4 mar-no">Admin Login</h3>
                        </div>
                        <form action="{{ path('sylius_admin_login_check') }}" method="post" novalidate>
                            {% if last_error %}
                                <div class="alert alert-block alert-danger">
                                    {{ last_error.message }}
                                </div>
                            {% endif %}

                            <div class="form-group">
                                {{ form_widget(form._username, {
                                    value: last_username|default(''),
                                    attr: {
                                        placeholder: 'Username',
                                        class: 'form-control'
                                    }
                                }) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form._password, {
                                    attr: {
                                        placeholder: 'Password',
                                        class: 'form-control'
                                    }
                                }) }}
                            </div>

                            <div class="checkbox pad-btm text-left">
                                {{ form_widget(form._remember_me, {
                                    attr: {
                                        class: 'magic-checkbox'
                                    }
                                }) }}
                                <label for="demo-form-checkbox">Remember me</label>
                            </div>
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Sign In</button>
                        </form>
                    </div>

                    {#<div class="pad-all">
                        <a href="pages-password-reminder.html" class="btn-link mar-rgt">Forgot password ?</a>
                        <a href="pages-register.html" class="btn-link mar-lft">Create a new account</a>
                    </div>#}
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
